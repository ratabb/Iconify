<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ColorPicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowTitleStyle">@style/LightPickerDialogTitleStyle</item>
        <item name="android:dialogCornerRadius">24dp</item>
        <item name="android:buttonCornerRadius">24dp</item>
        <item name="android:background">@drawable/container</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:fontFamily">@font/normal</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:radius">24dp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorTertiary">@color/colorAccent</item>
        <item name="cpv_hashColor">@color/textColorPrimary</item>
    </style>

    <style name="LightPickerDialogTitleStyle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Material.DialogWindowTitle
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SeekBar.Iconify" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorBackground</item>
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:thumbTint">@color/colorAccent</item>
    </style>

    <style name="MenuLightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/colorContainer</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:background">@color/colorContainer</item>
    </style>

    <style name="divider_accent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/divider_accent</item>
        <item name="android:layout_marginTop">@dimen/container_paddingSide</item>
        <item name="android:layout_marginBottom">@dimen/container_paddingSide</item>
    </style>

    <style name="divider_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/transparent</item>
    </style>
</resources>